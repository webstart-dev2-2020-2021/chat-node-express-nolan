<section class="container-fluid d-flex justify-content-center bg-black">
	<div class="row row-offcanvas vh-100 align-items-center">
		<form class="form p-5 border-light">
			<div class="d-flex flex-column align-items-center">
	      		<img class="border border-light" src="static/logo-white.png" alt="" width="72" height="72">
	      		<h1 class="h3 mt-2 mb-5 font-weight-bold">Ninja</h1>
	      	</div>
	      	<div class="form-group">
			    <label for="email">Email</label>
			    <input type="email" id="email" class="form-control rounded-0" placeholder="" required="" autofocus="">
			    <small id="emailHelpInline" class="form-text text-muted">
			      Email must be valid
			    </small>
			</div>
	      	<div class="form-group">
			    <label for="passsword">Password</label>
				<input type="password" id="password" class="form-control rounded-0" aria-describedby="passwordHelpBlock">
				<small id="passwordHelpBlock" class="form-text text-muted">
				  Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji
				</small>
			</div>
			<div class="form-group">
			    <label for="passsword">Repeat Password</label>
				<input type="password" id="password" class="form-control rounded-0" aria-describedby="passwordHelpBlock">
				<small id="passwordHelpBlock" class="form-text text-muted">
				  Your password must be identical on both cases
				</small>
			</div>
			<button class="btn btn-lg btn-outline-light btn-block mt-4 font-weight-bold" type="submit">
				Sign up
			</button>
	      	<small class="form-text text-muted"><a href="/signin">You already own an account ? Click here to connect.</a></small>
	    </form>
	</div>
</section>